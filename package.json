{
  "name": "nextjs-graphql-banking-poc",
  "version": "1.0.0",
  "description": "GraphQL Banking POC with Next.js, TypeScript, and URQL",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
