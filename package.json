    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "codegen": "pnpm -r run codegen"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}